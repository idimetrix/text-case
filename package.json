    "*.{js,jsx,ts,tsx,json,md,yml,yaml}": [
      "npm run prettier",
      "git add"
    ]
  },
  "devDependencies": {
    "husky": "^3.1.0",
    "lerna": "^3.20.2",
    "lint-staged": "^9.5.0",
    "prettier": "^1.19.1"
